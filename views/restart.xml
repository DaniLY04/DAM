<odoo>
    <data>
        <record id="action_restart_odoo" model="ir.actions.server">
            <field name="name">Reiniciar Odoo</field>
            <field name="model_id" ref="trabajo_final.model_trabajo_final_restart"/>
            <field name="state">code</field>
            <field name="code">model.env['trabajo_final.restart'].do_restart()</field>
        </record>

        <!--Acción actualización--> 
        <record id="action_update_practica" model="ir.actions.server">
            <field name="name">Actualizar my_model</field>
            <field name="model_id" ref="base.model_ir_module_module"/>
            <field name="binding_model_id" ref="base.model_ir_module_module"/>
            <field name="state">code</field>
            <field name="code">
                action = env['ir.module.module'].search([('name', '=', 'practica')]).button_immediate_upgrade()
            </field>
        </record>
    </data>
</odoo>